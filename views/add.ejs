<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Employee</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- CSS -->
    <link rel="stylesheet" href="styleadd.css">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar">
        <h2><i class="fa-solid fa-user-plus"></i> Add Employee</h2>
        <a href="/" class="back-btn">‚Üê Back to Dashboard</a>
    </nav>

    <!-- Form Container -->
    <div class="form-container">
        <form class="employee-form" action="/addEmployee" method="POST">

            <h3>Employee Details</h3>

            <div class="form-group">
                <label>ID</label>
                <input type="text" name="ID" placeholder="Enter Employee ID" required>
            </div>

            <div class="form-group">
                <label>Name</label>
                <input type="text" name="Name" placeholder="Enter Full Name" required>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" name="Email" placeholder="Enter Email" required>
            </div>

            <div class="form-group">
                <label>Department</label>
                <input type="text" name="Department" placeholder="Enter Department" required>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Basic Salary</label>
                    <input type="number" id="basicSalary" placeholder="Enter Basic Salary" required>
                </div>

                <div class="form-group">
                    <label>Tax</label>
                    <input type="number" id="tax" placeholder="Enter Tax" required>
                </div>
            </div>

            <div class="form-group">
                <label>Net Salary</label>
                <input type="number" id="netSalary" readonly placeholder="Auto Calculated">
            </div>

            <button type="submit" class="submit-btn">
                <i class="fa-solid fa-floppy-disk"></i> Add Employee
            </button>

        </form>
    </div>

    <!-- Optional JS for Auto Calculation -->
    <script>
        const basic = document.getElementById("basicSalary");
        const tax = document.getElementById("tax");
        const net = document.getElementById("netSalary");

        function calculateNet() {
            const basicValue = parseFloat(basic.value) || 0;
            const taxValue = parseFloat(tax.value) || 0;
            net.value = basicValue - taxValue;
        }

        basic.addEventListener("input", calculateNet);
        tax.addEventListener("input", calculateNet);
    </script>

</body>
</html>
